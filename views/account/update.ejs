<%- title  %>

<form action="/account/update" method="post">
    <label for="text">First Name:</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= account_firstname %>"><br><br>

    <label for="text">Last Name:</label>
    <input type="text" id="last-name" name="account_lastname" required value="<%= account_lastname %>"><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= account_email %>"><br><br>

    <input type="text" id="account_id" name="account_id" hidden value="<%= locals.accountData.account_id %>"><br><br>
    
    <input type="submit" value="Update">
  </form>

  <br><br>
<form action="/account/password-update" method="post">

    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br><br>
    <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
    
    <input type="text" id="account_id" name="account_id" hidden value="<%= locals.accountData.account_id %>">

    <input type="submit" value="Update Password">

</form>