<%- title %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="post">
    <label for="text">First Name:</label>
    <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>"><br><br>

    <label for="text">Last Name:</label>
    <input type="text" id="last-name" name="account_lastname" required value="<%= locals.account_lastname %>"><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>"><br><br>
    
    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br><br>
    <h6>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</h6> 

    
    <input type="submit" value="Register">
  </form>