<h1><%- title  %></h1>

<form action="/inv/update" method="post" id="updateForm">    
    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" value="<%= inv_make %>"><br>
    
    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" value="<%= inv_model %>"><br>
    
    <label for="inv_year">Year:</label>
    <input type="text" name="inv_year" value="<%= inv_year %>"><br>
    
    <label for="inv_description">Description:</label>
    <textarea name="inv_description"><%= inv_description %></textarea><br>
    
    <label for="inv_image">Image:</label>
    <input type="text" name="inv_image" value="<%= inv_image %>"><br>
    
    <label for="inv_thumbnail">Thumbnail:</label>
    <input type="text" name="inv_thumbnail" value="<%= inv_thumbnail %>"><br>
    
    <label for="inv_price">Price:</label>
    <input type="text" name="inv_price" value="<%= inv_price %>"><br>
    
    <label for="inv_miles">Miles:</label>
    <input type="text" name="inv_miles" value="<%= inv_miles %>"><br>
    
    <label for="inv_color">Color:</label>
    <input type="text" name="inv_color" value="<%= inv_color %>"><br>
    
    <input type="hidden" name="classification_id" value="<%= classification_id %>">
    
    <button type="submit" disabled>Update Vehicle</button>

    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>

<script src="/js/inv-update.js"></script>
